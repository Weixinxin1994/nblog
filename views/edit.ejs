<%- include header %>

<form method="post">
    <div class="form-group">
        <input type="text" name="title" value="<%= post.title %>"  class="form-control" placeholder="标题" />
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-sm-12">
                <input type="text" name="tag" value="<%= post.tags.join(";")%>" class="form-control input-sm" placeholder="标签" />
            </div>
    
        </div>
    </div>

    <div class="form-group">
        <textarea name="content" class="form-control" cols="30" rows="20" placeholder="正文内容"><%- post.content %></textarea>
    </div>


    <hr/>
    <span class="pull-right">
        <button type="submit" class="btn btn-info">
            确认修改
        </button>
    </span>
</form>

<%- include footer %>
