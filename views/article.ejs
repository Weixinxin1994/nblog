<%- include header %>

<div class="post">
    <h5 class="author text-muted">
        <% if(user && user.name === post.author.name) { %>
        <a href="/edit/<%= post._id %>" class="btn btn-primary btn-sm">编辑</a>
        <a href="/remove/<%= post._id %>" class="btn btn-primary btn-sm">删除</a>
        <% } %>
        <img class="avatar" src="https://gravatar.com/avatar/<%= post.avatar %>?s=28" alt=""/> <a href="/u/<%= post.author.name %>"><%= post.author.name %></a>发布于<%= post.dateFromNow %>

    </h5>
    <br/>
    <br/>
    <h3><%- post.title %></h3>
    <p>
        <%- post.content %>
    </p>

    <div class="tags">
        <hr/>
        <% post.tags.forEach(function(v) { %>
        <span class="badge"><%= v %></span>
        <% }) %>
    </div>
    
    <p class="info">
    阅读：<%= post.pv %> | 
    评论：<%= post.comments.length %> |
    发布于: <%= post.datetime %> 
   </p>
</div>

<%- include comment %>

<%- include footer %>